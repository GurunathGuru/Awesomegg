<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bgim3"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:background="@drawable/ic_border4"
            android:padding="5dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:hint="Enter your Name " />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:minLines="2"
            android:textSize="15dp"
            android:background="@drawable/ic_border4"
            android:hint="Enter your Email Id"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etSelectApartment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusableInTouchMode="false"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:minLines="2"
            android:textSize="15dp"
            android:background="@drawable/ic_border4"
            android:fontFamily="@font/montserrat_light"
            android:hint="Select your apartments" />

        <EditText
            android:id="@+id/etBlockNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:background="@drawable/ic_border4"
            android:fontFamily="@font/montserrat_light"
            android:hint="Please Enter Your Apartment Block Number" />

        <EditText
            android:id="@+id/etFlatNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:background="@drawable/ic_border4"
            android:fontFamily="@font/montserrat_light"
            android:hint="Please Enter Your Apartment Flat Number if Exist" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tvContinue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="25dp">

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/etMobilNumber"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="SAVE"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>