<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coach_mark_master_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AD000000"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.15"
        android:orientation="horizontal"
        android:weightSum="3"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="start"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:layout_marginLeft="25sp"
                android:background="@drawable/a1"
                android:backgroundTint="#FFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image1"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="@string/menuDetails"
                android:textColor="#FFF"
                app:layout_constraintTop_toBottomOf="@+id/image1"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60sp"
                android:layout_height="90sp"
                android:layout_marginTop="35dp"
                android:background="@drawable/a7"
                android:backgroundTint="#FFF"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/image1"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center|top"
                android:text="@string/customer"
                android:textColor="#FFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_weight="0.7"
            android:gravity="end"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="350sp"
                android:background="@drawable/a8"
                android:backgroundTint="#FFF"
                tools:ignore="DuplicateIds,MissingConstraints" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.45"
        android:gravity="center|end|top"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image1"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:text="@string/notification"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@+id/image1"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:text="@string/subscribe"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@+id/image1"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="70sp"
            android:layout_height="150sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/a15"
            android:backgroundTint="#FFF"
            tools:ignore="DuplicateIds,MissingConstraints" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.45"
        android:gravity="center|bottom|end"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="120dp"
            android:layout_height="50sp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:fontFamily="@font/opensans_regular"
            android:layout_margin="15sp"
            android:text="GOT IT"
            android:textSize="18sp"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>