<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubscribeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <View
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.75"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1.25">

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1.4"
            android:background="@android:drawable/alert_light_frame"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.3"
                android:fontFamily="@string/font_H1"
                android:gravity="center|start"
                android:paddingLeft="15dp"
                android:text="Confirm The Order"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOneTime"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.6"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvAddItem"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/ic_border3"
                    android:gravity="center"
                    android:text="Add Item"
                    android:textColor="@color/colorBlack"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tvGrandTotal"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1.3"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|start"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:background="@drawable/ic_border"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="Delivery Date"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/tvDate"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/ic_border4"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="Date"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_margin="2dp"
                android:layout_weight="1.7"
                app:cardCornerRadius="5dp"
                app:contentPaddingRight="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="2">
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/fontawesome_webfont"
                            android:gravity="center"
                            android:text="Order delivery expected tomorrow"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"
                android:fontFamily="@font/montserrat_light"
                android:gravity="start|center"
                android:paddingLeft="15dp"
                android:text="if you not comfortable with dates plz call us"
                android:textColor="@color/colorBlack"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:padding="15sp">

                <TextView
                    android:id="@+id/tvDiscountPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center|start"
                    android:paddingBottom="15sp"
                    android:text="saving"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvSavedPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center|start"
                    android:paddingBottom="10sp"
                    android:text="discount"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|start"
                    android:text="total"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvProceedToPay"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Pay Farmer"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
