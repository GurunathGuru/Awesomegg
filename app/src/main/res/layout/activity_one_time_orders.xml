<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2A2A2"
    android:orientation="vertical"
    tools:context=".SubscribeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <View
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.75"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1.25">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A4FFFFFF" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1.5"
            android:background="@android:drawable/alert_light_frame"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.4"
                android:fontFamily="@string/font_H1"
                android:gravity="center|start"
                android:paddingLeft="15dp"
                android:text="Confirm The Order"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOneTime"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.6"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvAddItem"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/ic_border3"
                    android:gravity="center"
                    android:text="Add Item"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tvGrandTotal"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1.3"
                    android:fontFamily="@string/font_H1"
                    android:gravity="center|start"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/ic_border"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.8"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="One Time Order"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/tvDate"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/ic_border4"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="Date"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_margin="2dp"
                android:layout_weight="1.7"
                app:cardCornerRadius="5dp"
                app:contentPaddingRight="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/monthName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="month"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fontawesome_webfont"
                            android:gravity="center"
                            android:text="@string/monthTitlePlaceholder"
                            android:textColor="@color/colorWhite"
                            android:textSize="25sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        tools:listitem="@layout/layout_date" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"
                android:fontFamily="@font/montserrat_light"
                android:gravity="start|center"
                android:paddingLeft="15dp"
                android:text="if you not comfortable with dates plz call us"
                android:textColor="@color/colorBlack"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/tvDiscountPrice"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center|start"
                android:text=""
                android:paddingLeft="130dp"
                android:textColor="@color/colorBlack"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvSavedPrice"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center|start"
                android:text=""
                android:paddingLeft="130dp"
                android:textColor="@color/colorBlack"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center|start"
                android:text=""
                android:paddingLeft="130dp"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvProceedToPay"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                android:fontFamily="@string/font_H1"
                android:gravity="center"
                android:text=" Proceed To Pay"
                android:textColor="@color/colorWhite"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
